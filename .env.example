# Application
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# AI Services
# OpenAI API for diagnostic analysis
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Claude for complex reasoning
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229

# NOVA Core (Private)
# Reference to private NOVA-AI-Council-Engine
NOVA_CORE_PATH=../nova-ai-council-engine
NOVA_ENABLED=true

# E-commerce Integrations
# Shopify
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_SHOP_DOMAIN=your-shop.myshopify.com
SHOPIFY_ACCESS_TOKEN=your_shopify_access_token

# WooCommerce
WOOCOMMERCE_URL=https://yourstore.com
WOOCOMMERCE_CONSUMER_KEY=your_woocommerce_consumer_key
WOOCOMMERCE_CONSUMER_SECRET=your_woocommerce_consumer_secret

# Parts API Integration
PARTS_API_KEY=your_parts_api_key
PARTS_API_BASE_URL=https://api.partsvendor.com/v1

# AR Configuration
AR_ASSETS_PATH=./ar-assets
AR_CACHE_ENABLED=true
AR_CACHE_TTL=3600

# Diagnostics
DIAGNOSTIC_LOG_LEVEL=info
DIAGNOSTIC_RETENTION_DAYS=30

# Database (if needed later)
# DATABASE_URL=postgresql://user:password@localhost:5432/ridewire_auto
# REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRATION=24h
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Stripe Configuration
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Subscription Plans
STRIPE_PRICE_ID_BASIC=price_basic_99_monthly
STRIPE_PRICE_ID_PRO=price_pro_199_monthly
STRIPE_PRICE_ID_ENTERPRISE=price_enterprise_499_monthly

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json
